{
  "tests": [
    {
      "testId": "login-steps",
      "description": "Login Steps",
      "steps": [
        {
          "stepId": "nav-login",
          "description": "Navigate to https://example.com/login",
          "goTo": "https://example.com/login"
        },
        {
          "stepId": "click-login",
          "description": "Click the Login button",
          "click": "Login"
        },
        {
          "stepId": "type-email",
          "description": "Type 'user@test.com' in the email field",
          "type": {
            "keys": "user@test.com",
            "selector": "[name='email'], [type='email'], #email, input[placeholder*='email' i]"
          }
        },
        {
          "stepId": "verify-welcome",
          "description": "Verify 'Welcome' text appears",
          "find": "Welcome"
        }
      ]
    }
  ]
}
